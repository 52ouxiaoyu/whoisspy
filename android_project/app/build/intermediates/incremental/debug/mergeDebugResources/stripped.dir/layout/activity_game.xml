<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:id="@+id/linearLayoutStatusBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewGameStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="游戏进行中"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <!-- 游戏内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutBottomActions"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutStatusBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 词汇显示区域（只有当前玩家可见） -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:padding="24dp"
                app:cardBackgroundColor="@color/primaryLight"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/textViewYourWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/your_word"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewWordValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="保密"
                    android:textColor="@color/primary"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- 当前回合信息 -->
            <TextView
                android:id="@+id/textViewCurrentTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="等待开始"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/cardViewWord" />

            <!-- 玩家列表 -->
            <TextView
                android:id="@+id/textViewPlayerListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/player_list"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textViewCurrentTurn" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewPlayerListTitle" />

            <!-- 发言记录区域 -->
            <TextView
                android:id="@+id/textViewSpeechRecordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="发言记录"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewPlayers" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSpeechRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/textViewSpeechRecordTitle" />

            <!-- 投票区域 -->
            <LinearLayout
                android:id="@+id/linearLayoutVoteSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewSpeechRecord">

                <TextView
                    android:id="@+id/textViewVoteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_vote"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearLayoutVoteOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:orientation="vertical">
                    <!-- 投票选项动态生成 -->
                </LinearLayout>
            </LinearLayout>

            <!-- 游戏结果区域 -->
            <LinearLayout
                android:id="@+id/linearLayoutGameResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone"
                android:background="@color/surface"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewSpeechRecord">

                <TextView
                    android:id="@+id/textViewGameResultTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="游戏结束"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewWinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="胜利者: 平民"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewWordReveal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="平民词: 苹果\n卧底词: 香蕉"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:id="@+id/linearLayoutBottomActions"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/surface"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFinishViewing"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/finish_viewing"
            android:visibility="gone"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewNext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/view_next"
            android:visibility="gone"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartSpeech"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/start_speech"
            android:visibility="gone"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartVote"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/start_vote"
            android:visibility="gone"
            app:cornerRadius="24dp" />

        <LinearLayout
            android:id="@+id/linearLayoutGameEndButtons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonNewGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/new_game"
                app:cornerRadius="24dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>